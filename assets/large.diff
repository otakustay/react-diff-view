+    var log = [];
+    ReactTestRenderer.create(<div ref={r => log.push(r)} />);
+    expect(log).toEqual([null]);
+  });
+
+  it('warns correctly for refs on SFCs', () => {
+    spyOn(console, 'error');
+    function Bar() {
+      return <div>Hello, world</div>;
+    }
+    class Foo extends React.Component {
+      render() {
+        return <Bar ref="foo" />;
+      }
+    }
+    class Baz extends React.Component {
+      render() {
+        return <div ref="baz" />;
+      }
+    }
