+    ReactTestRenderer.create(<input ref={r => log.push(r)} />, {
+      createNodeMock,
+    });
+    ReactTestRenderer.create(
+      <div>
+        <span>
+          <ul>
+            <li ref={r => log.push(r)} />
+          </ul>
+          <ul>
+            <li ref={r => log.push(r)} />
+            <li ref={r => log.push(r)} />
+          </ul>
